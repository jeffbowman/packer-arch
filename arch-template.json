{
    "variables": {
        "iso_url": "https://mirrors.kernel.org/archlinux/iso/2016.03.01/archlinux-2016.03.01-dual.iso",
        "iso_checksum": "992f046c3fb5afecaf8734126f2a095f437ca9b8",
        "iso_checksum_type": "sha1",
        "ssh_timeout": "20m"
    },
    "builders": [
        {
            "type": "virtualbox-iso",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "guest_os_type": "ArchLinux_64",
            "guest_additions_mode": "disable",
            "http_directory": "srv",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/install-base.sh<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
                "/usr/bin/bash ./install-base.sh<enter>"
            ],
            "disk_size": 20480,
            "hard_drive_interface": "sata",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "shutdown_command": "sudo systemctl start poweroff.timer"
        },
        {
            "type": "vmware-iso",
            "iso_url": "{{ user `iso_url` }}",
            "iso_checksum": "{{ user `iso_checksum` }}",
            "iso_checksum_type": "{{ user `iso_checksum_type` }}",
            "http_directory": "srv",
            "boot_wait": "5s",
            "boot_command": [
                "<enter><wait10><wait10>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/install-base.sh<enter><wait5>",
                "/usr/bin/curl -O http://{{ .HTTPIP }}:{{ .HTTPPort }}/poweroff.timer<enter><wait5>",
                "/usr/bin/bash ./install-base.sh<enter>"
            ],
            "disk_size": 20480,
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_timeout": "{{ user `ssh_timeout` }}",
            "shutdown_command": "sudo systemctl start poweroff.timer"
        }
    ],
    "provisioners": [
        {
            "only": ["virtualbox-iso"],
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
            "script": "scripts/install-virtualbox.sh"
        },
        {
            "type": "file",
            "source": "resources/p.txt",
            "destination": "/tmp/p.txt",
            "pause_before": "1s"
        },
        {
            "type": "file",
            "source": "resources/pkgdiff.sh",
            "destination": "/tmp/pkgdiff.sh",
            "pause_before": "1s"
        },
        {
            "type": "file",
            "source": "resources/AnypointStudio.desktop",
            "destination": "/tmp/AnypointStudio.desktop",
            "pause_before": "1s"
        },
        {
            "type": "file",
            "source": "resources/AnypointStudio.tar.gz",
            "destination": "/home/vagrant/AnypointStudio.tar.gz",
            "pause_before": "1s"
        },
        {
            "type": "shell",
            "execute_command": "{{ .Vars }} sudo -E -S bash '{{ .Path }}'",
            "scripts": [
              "scripts/devenv.sh",
              "scripts/cleanup.sh"
            ],
            "pause_before": "10s"
        }
    ],
    "post-processors": [
        [{
            "type": "vagrant",
            "output": "packer_{{ .BuildName }}_{{ .Provider }}.box"
        },
        {
            "type": "atlas",
            "only": ["virtualbox-iso"],
            "artifact": "jefftbowman/mule-dev-desktop",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "virtualbox",
                "version": "0.2.0"
            }
        },
        {
            "type": "atlas",
            "only": ["vmware-iso"],
            "artifact": "jefftbowman/mule-dev-desktop",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "vmware_desktop",
                "version": "0.1.3"
            }
        }]
    ]
}
